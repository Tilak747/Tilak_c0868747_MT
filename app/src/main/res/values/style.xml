<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="MyLabel">
        <item name="android:textColor">#3E3E3E</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="MyLabel.Hint">
        <item name="android:textColor">#403E3E</item>
    </style>
    <style name="MyLabel.Price">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyRadio">
        <item name="android:textColor">#2B2929</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="MyCheckbox">
        <item name="android:textColor">#2B2929</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

</resources>