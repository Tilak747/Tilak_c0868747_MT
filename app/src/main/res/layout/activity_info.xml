<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_margin">


        <TextView
            style="@style/MyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Your details are as follows;"
            android:layout_marginTop="@dimen/default_margin"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/carName"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_baseline_car_rental_24"
            app:iconTint="@color/black"
            tools:text="BMW"
            android:enabled="false"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_normal"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:hint="Rent Price per day"
            android:enabled="false"
            android:layout_marginTop="@dimen/margin_normal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tielPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="12"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:hint="No of days"
            android:enabled="false"
            android:layout_marginTop="@dimen/margin_normal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tielDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="12"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:hint="Drivers Age"
            android:enabled="false"
            android:layout_marginTop="@dimen/margin_normal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tielAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="12"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:hint="Total Amount"
            android:enabled="false"
            android:layout_marginTop="@dimen/margin_normal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tielAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="12"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            android:enabled="false"
            android:hint="Total Price (Afer TAX 13%)"
            android:layout_marginTop="@dimen/margin_normal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tielTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="12"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvOptions"
            style="@style/MyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Options (Selected)"
            android:layout_marginTop="@dimen/default_margin"
            />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>